<script type="text/javascript">
    //显示任务明细
    function showTaskDetail(ths, id) {
        if ($("#" + id).is(":visible")) {
            $(ths).children().removeClass("icon-double-angle-up");
            $(ths).children().addClass("icon-double-angle-down");
            $("#" + id).hide();
        } else {
            $(".taskDetail").hide();
            $("ul li .cexp span .tsk").removeClass("icon-double-angle-up");
            $("ul li .cexp span .tsk").addClass("icon-double-angle-down");
            if (id == "task4") {
                Msg.show("加载中...", 3);
                $.post("/S3/Customer/CustomerRepair", function (htmldata) {
                    Msg.hide();
                    $("#" + id).html(htmldata);
                    $(ths).children().removeClass("icon-double-angle-down");
                    $(ths).children().addClass("icon-double-angle-up");
                    $("#" + id).show();
                    scrollTo($("#" + id).parent());
                });  
            } else if (id == "task6") {
                Msg.show("加载中...", 3);
                $.post("/S3/Customer/ServiceSupport", function (htmldata) {
                    Msg.hide();
                    $("#" + id).html(htmldata);
                    $(ths).children().removeClass("icon-double-angle-down");
                    $(ths).children().addClass("icon-double-angle-up");
                    $("#" + id).show();
                    scrollTo($("#" + id).parent());
                });
            } else {
                Msg.show("加载中...", 3);
                $.post("/S3/Customer/CustomerAppointment", function (htmldata) {
                    Msg.hide();
                    $("#" + id).html(htmldata);
                    $(ths).children().removeClass("icon-double-angle-down");
                    $(ths).children().addClass("icon-double-angle-up");
                    $("#" + id).show();
                    scrollTo($("#" + id).parent());
                });
            }
        }
    } 
    $(function () {
        $("li").click(function () {
            $("li").removeClass("dataListSld");
            $(this).addClass("dataListSld");
        });
    });
</script>
