{
    <li><img src="~/Areas/NPaia/Resources/images/Goods/coat.png"/></li>
}
else if (ViewBag.Category == "卫衣")
{
    <li><img src="~/Areas/NPaia/Resources/images/Goods/fleece.png"/></li>
}
else if (ViewBag.Category == "羽绒服")
{
    <li><img src="~/Areas/NPaia/Resources/images/Goods/jacket.png"/></li>
}
else if (ViewBag.Category == "针织衫")
{
    <li><img src="~/Areas/NPaia/Resources/images/Goods/knitwear.png"/></li>
}
else if (ViewBag.Category == "裤子")
{
    <li><img src="~/Areas/NPaia/Resources/images/Goods/trousers.png"/></li>
}
else if (ViewBag.Category == "毛衫")
{
    <li><img src="~/Areas/NPaia/Resources/images/Goods/sweater.png"/></li>
}
else if (ViewBag.Category == "裙子")
{
    <li><img src="~/Areas/NPaia/Resources/images/Goods/dress.png"/></li>
}
else if (ViewBag.Category == "摩登羽绒")
{
    <li><img src="~/Areas/NPaia/Resources/images/Goods/merryFeathers.jpg"/></li>
