    <li><img src="~/Areas/NPaia/Resources/images/Goods/2015SS.jpg"/></li>
}
</ul>
<table id="skulist">
    <tbody>
        @for (int i = 0; i < ViewBag.StyleInfo.Rows.Count; i = i + 2)
        {
            if (@ViewBag.StyleInfo.Rows[i]["STYL_ID"] != "")
            {
                <tr>   
                    <td>
                        <div style="border:1px solid #ccc;">
                            <div><img class="bg" src="http://122.225.19.188:8090@{@ViewBag.StyleInfo.Rows[i]["STYL_PicturePath"].Split(',')[0].ToString()}" onerror="this.src='/Areas/NPaia/Resources/images/Goods/error.gif';"/></div>
                            <div class="name">@ViewBag.StyleInfo.Rows[i]["STYL_Name"]|<span class="code">@ViewBag.StyleInfo.Rows[i]["STYL_Code"]</span></div>
                            <div style="margin: 5px;"><span style="color: red;">@float.Parse(ViewBag.StyleInfo.Rows[i]["STYL_Price"]).ToString("0.00")</span></div>
                        </div>
                    </td>
                    @if (ViewBag.StyleInfo.Rows.Count == 1)
                    {
                    <td>
                    </td>
                    }
                    @if (i + 1 < ViewBag.StyleInfo.Rows.Count)
                    {
                    <td>
                        <div style="border:1px solid #ccc;">
                            <div><img class="bg" src="http://122.225.19.188:8090@{@ViewBag.StyleInfo.Rows[i + 1]["STYL_PicturePath"].Split(',')[0].ToString()}" onerror="this.src='/Areas/NPaia/Resources/images/Goods/error.gif';"/></div>
                            <div class="name">@ViewBag.StyleInfo.Rows[i + 1]["STYL_Name"]|<span class="code">@ViewBag.StyleInfo.Rows[i + 1]["STYL_Code"]</span></div>
                            <div style="margin: 5px;"><span style="color: red;">@float.Parse(ViewBag.StyleInfo.Rows[i + 1]["STYL_Price"]).ToString("0.00")</span></div>
                        </div>
                    </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>
<script type="text/javascript">
    $("#skulist td").click(function () {
        if ($(this).find(".code").size() == 0)
            return;
        window.location.href = "/NPaia/Goods/SKUDetail?sku="+$(this).find(".code").text()+"&sid=" + Url.get("sid") + "&oid=" + Url.get("oid");
    })

</script>