@{
    ViewBag.Title = "品牌-" + ViewBag.Category;
    Layout = "~/Views/Shared/_GLWXSiteLayout.cshtml";
}

@section script{
    <link href="~/Areas/GLWXSite/Resources/Mobile.css?v3" rel="stylesheet" />
}

<script type="text/javascript">
    $(function () {
        $(".name").width($("body").width() / 2 - 32);

        var evt = "onorientationchange" in window ? "orientationchange" : "resize";

        window.addEventListener(evt, function () {
            $(".name").width($("body").width() / 2 - 32);
        }, false);
    });
</script>

