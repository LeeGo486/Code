<h2 style="text-align: center">@ViewBag.name</h2>


<table id="skulist">
    <tbody>
        @for (int i = 0; i < ViewBag.StyleInfo.Rows.Count; i = i + 2)
        {
            if (@ViewBag.StyleInfo.Rows[i]["STYL_ID"] != "")
            {
            <tr>
                <td>
                    <div>
                        <div>
                            <img class="bg" src="http://122.225.19.188:8090@{@ViewBag.StyleInfo.Rows[i]["STYL_PicturePath"].Split(',')[0].ToString()}" onerror="this.src='/Areas/GLWXSite/Resources/images/Goods/error.gif';"/>
                        </div>
                        <div class="name">@ViewBag.StyleInfo.Rows[i]["STYL_Name"]|<span class="code">@ViewBag.StyleInfo.Rows[i]["STYL_Code"]</span></div>
                        <div>RMB @float.Parse(ViewBag.StyleInfo.Rows[i]["STYL_Price"]).ToString("0")</div>
                    </div>
                </td>
                @if (ViewBag.StyleInfo.Rows.Count == 1)
                {
                    <td></td>
                }
                @if (i + 1 < ViewBag.StyleInfo.Rows.Count)
                {
                    <td>
                        <div>
                            <div>
                                <img class="bg" src="http://122.225.19.188:8090@{@ViewBag.StyleInfo.Rows[i + 1]["STYL_PicturePath"].Split(',')[0].ToString()}" onerror="this.src='/Areas/GLWXSite/Resources/images/Goods/error.gif';"/>
                            </div>
                            <div class="name">@ViewBag.StyleInfo.Rows[i + 1]["STYL_Name"]|<span class="code">@ViewBag.StyleInfo.Rows[i + 1]["STYL_Code"]</span></div>
                            <div>RMB  @float.Parse(ViewBag.StyleInfo.Rows[i + 1]["STYL_Price"]).ToString("0")</div>
                        </div>
                    </td>
                }
            </tr>
            }
        }
    </tbody>
</table>
<script type="text/javascript">
    $("#skulist td").click(function () {
        if ($(this).find(".code").size() == 0)
            return;
        alert($(this).find(".code").text());
        // + "&sid=" + Url.get("sid") + "&oid=" + Url.get("oid");
        window.location.href = "/GLWXSite/GLGoods/SKUDetail?sku=" + $(this).find(".code").text();
    })
</script>
