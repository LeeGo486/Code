}
@section script{
    <link href="~/Areas/Game/Resources/css/qz.css?v3" rel="stylesheet" />
    <script src="~/Scripts/IosSlider/jquery.iosslider.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var isShow = 0;
            $('.iosSlider').iosSlider({
                scrollbar: true,
                autoSlide: true,
                snapVelocityThreshold: 2,
                autoSlideTimer: 3000,
                frictionCoefficient: 0.6,
                elasticPullResistance: 0.6,
                snapToChildren: true,
                desktopClickDrag: true,
                scrollbarLocation: 'top',
                scrollbarMargin: '10px 10px 0 10px',
                scrollbarBorderRadius: '0',
                responsiveSlideWidth: true,
                navSlideSelector: $('.iosSliderButtons .button'),
                infiniteSlider: true,
                startAtSlide: '1',
                onSlideChange: slideContentChange,
                onSliderLoaded: slideContentLoaded
            });
            function slideContentChange(args) {
                $(args.sliderObject).parent().find('.iosSliderButtons .button').removeClass('selected');
                $(args.sliderObject).parent().find('.iosSliderButtons .button:eq(' + (args.currentSlideNumber - 1) + ')').addClass('selected');

            }
            function slideContentLoaded(args) {
                $(args.sliderObject).parent().find('.iosSliderButtons .button').removeClass('selected');
                $(args.sliderObject).parent().find('.iosSliderButtons .button:eq(' + (args.currentSlideNumber - 1) + ')').addClass('selected');
            }
            var totalPlay = '@ViewBag.playCount';
            if (parseInt(totalPlay) >= 2) {
                window.location.href = "/Game/Quiz/Share?sid=CFE404EA-FE5B-4A85-87F0-B2701929462C&id=CFE404EA-FE5B-4A85-87F0-B2701929462C&oid=@(Request["oid"])";
            }
            $(window).bind("scroll", function () {
                if (isShow == 0) {
                    $(".pdown").hide();
                    $(window).unbind("scroll");
                }else {
                    isShow = 1;
                }
            });
        });
    </script>
}
