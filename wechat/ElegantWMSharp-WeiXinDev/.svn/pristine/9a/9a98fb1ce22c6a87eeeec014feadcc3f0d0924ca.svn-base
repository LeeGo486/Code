.bg,
ul li img {
    width: 100%;
}

#title {
    height: 20%;
    background: url(/Areas/NPaia/Resources/images/Goods/bgcolor.png) center center repeat-x;
    color: #fff;
}

#per {
    height: 100px;
    background: url(/Areas/NPaia/Resources/images/Goods/per.png) center center repeat-x;
    color: #fff;
    text-align: left;
    font-size: 16px;
    padding: 20px;
}

.split {
    height: 10px;
    background: url(/Areas/Matrix/Resources/images/line.jpg) center center repeat-x;
}

table {
    width: 100%;
}

td {
    padding: 10px;
    border: 1px solid #fff;
}

#name .btn,
#sel .btn,
#info .btn {
    border-color: #ccc;
    background-color: #fff;
    background-image: -webkit-linear-gradient(top,#fff 0,#fff 100%);
    background-image: linear-gradient(to bottom,#fff 0,#fff 100%);
    color: #000;
    text-shadow: 0;
    text-shadow: 0 0 0 rgba(0,0,0,0);
    width: 54px;
}

    #name .btn.active,
    #sel .btn.active,
    #info .btn.active {
        background-color: #2d6ca2;
        border-color: #2b669a;
        background-image: -webkit-linear-gradient(top,#428bca 0,#2d6ca2 100%);
        background-image: linear-gradient(to bottom,#428bca 0,#2d6ca2 100%);
        color: #fff;
        text-shadow: 0;
        text-shadow: 0 0 0 rgba(0,0,0,0);
        width: 54px;
    }


table td {
    border-width: 0px;
}

#skulist {
    text-align: left;
}

    #skulist .name {
        margin: 5px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    #skulist td {
        width: 50%;
    }

table#detail,
table#bigImg {
    width: 80%;
    text-align: left;
    margin: 0 10%;
}

    table#detail td,
    table#bigImg td {
        border-width: 0 0 1px 0;
    }

        table#bigImg td img {
            width: 100%;
        }

table.cart {
    border: 1px solid #ccc;
    text-align: left;
    background-color: #fff;
}

    table.cart td.smallImg {
        width: 100px;
        padding: 3px;
    }

    table.cart td.check {
        width: 50px;
        text-align: center;
    }

    table.cart td.count {
        border-width: 1px 0 0 0;
        border-color: #ccc;
    }

.tab-pane {
    padding: 10px 10px 0;
}

ul li {
    list-style-type: none;
}


/*************薪资表格****************/
.salaryTable {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #E3E3E3;
}

    .salaryTable th {
        text-align: right;
        font-weight: normal;
        padding: 6px 3px 6px 0px;
        background-color: #f7f7f7;
        border: 1px solid #efefef;
        width: 90px;
    }

    .salaryTable td {
        text-align: left;
        font-weight: normal;
        padding: 6px 0px 6px 3px;
        background-color: #fff;
        border: 1px solid #efefef;
    }

/*************考勤****************/
.AvTable {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #E3E3E3;
}

    .AvTable th {
        text-align: right;
        font-weight: normal;
        padding: 6px 3px 6px 0px;
        background-color: #f7f7f7;
        border: 1px solid #efefef;
        width: 81px;
    }

    .AvTable td {
        text-align: left;
        font-weight: normal;
        padding: 6px 0px 6px 3px;
        background-color: #fff;
        border: 1px solid #efefef;
        word-wrap: break-word;
        word-break: break-all;
    }

/************我的薪资个人信息*************/
.userInfo .headimg {
    width: 100px;
    text-align: center;
}

    .userInfo .headimg img {
        border-radius: 3px;
        border: 1px solid #ccc;
        width: 100px;
        height: 135px;
        float: left;
    }

.lable {
    color: #AAA;
}

/*********用户个人信息页面************/
.headimg {
    width: 50px;
    text-align: center;
}

    .headimg img {
        border-radius: 4px;
        border: 1px solid #ddd;
        width: 48px;
        float: left;
    }

.userinfo {
    float: left;
    min-width: 50px;
    margin-left: 10px;
    padding-top: 15px;
}

    .userinfo span {
        font-size: 14px;
        font-weight: bold;
    }

/*********行动计划************/
.dataPromiseSearchInfoDetail {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #E3E3E3;
}

    .dataPromiseSearchInfoDetail th {
        text-align: center;
        font-weight: normal;
        padding: 6px 3px 6px 0px;
        background-color: #fff;
        border: 1px solid #efefef;
        width: 81px;
    }

    .dataPromiseSearchInfoDetail td {
        text-align: center;
        font-weight: normal;
        padding: 6px 0px 6px 3px;
        background-color: #fff;
        border: 1px solid #efefef;
        word-wrap: break-word;
        word-break: break-all;
    }
