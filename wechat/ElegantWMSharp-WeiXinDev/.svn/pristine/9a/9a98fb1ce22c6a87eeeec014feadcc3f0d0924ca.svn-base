.noticDetail h3 {
    font-size: 16px;
    margin: 0px 0px 12px 0px;
    font-weight: bold;
}

.noticDetail h4 {
    font-size: 16px;
    margin: 20px 0px 8px 0px;
    font-weight: normal;
    color: #444;
    border-bottom: 1px solid #ddd;
    padding: 8px 0px 8px 0px;
}

    .noticDetail h4 span {
        padding: 7px 0px 7px 0px;
        border-bottom: 2px solid #CC3333;
    }

.lesson {
    border-bottom: 1px dashed #ddd;
    margin: 8px 0px 8px 0px;
    padding: 8px 0px 8px 0px;
    font-size: 12px;
}

.noticDetail h6 {
    font-size: 16px;
    color: #FF6666;
    text-align: center;
    padding: 16px 4px;
    margin: 8px 0px;
}



.ht {
    padding: 5px;
    margin: 4px 0px 0px 0px;
    font-size: 14px;
}

.mainArea {
    line-height: 180%;
}

    .mainArea h4 {
        font-size: 14px;
        margin: 0px 0px 8px 0px;
        font-weight: normal;
        color: #444;
        border-bottom: 1px solid #ddd;
        padding: 8px 0px 8px 0px;
    }

        .mainArea h4 span {
            padding: 4px 0px 7px 0px;
            border-bottom: 2px solid #CC3333;
        }

    .mainArea .operate {
        /*border-top: 1px dashed #ccc;*/
        margin-top: 8px;
        margin-bottom: 28px;
        font-size: 14px;
        text-align: center;
    }

    .mainArea .btnOpt {
        margin: 0px 2px;
        padding: 0px 4px;
        float: right;
    }

.eventlog {
    border-bottom: 1px dashed #ddd;
    margin: 8px 0px 8px 0px;
    padding: 8px 0px 8px 0px;
    font-size: 12px;
}

.eventSch {
    color: #5e6060;
    padding: 10px 10px 0px 10px;
    border: 1px solid #e5e5e5;
    background-color: #fff;
    /*box-shadow: 1px 1px 2px #e3e3e5,-1px -1px 2px #e3e3e5;*/
    font-size: 12px;
    border-radius: 3px;
    margin-bottom: 12px;
}

    .eventSch .operate {
        border-top: 1px dashed #ccc;
        margin-top: 8px;
        font-size: 14px;
        text-align: center;
    }

    .eventSch .btnOpt {
        margin: 8px 0px;
        padding: 0px 10px;
        float: right;
        color: #777;
        /*font-weight:bold;*/
    }

    .eventSch h4 {
        font-size: 14px;
        font-weight: normal;
        padding: 0px 0px 20px 0px;
        border-bottom: 1px dashed #ccc;
    }

