@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>登陆 - @System.Configuration.ConfigurationManager.AppSettings["SysName"]</title>
    <meta charset="utf-8" />
    <link href="~/Content/Plugin/Tencent/msgbox.css" rel="stylesheet" />
    <script type="text/javascript" src="/Scripts/jquery-1.6.2.min.js"></script>
    <script src="~/Content/Plugin/Tencent/msgbox.js"></script>
    <style type="text/css">
        body {
            font-size: 12px;
            margin: 0px auto;
            text-align: center;
            font-family: "微软雅黑",Arial;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            $.getUrlParam = function (name) {
                var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
                var r = window.location.search.substr(1).match(reg);
                if (r != null) return unescape(r[2]); return "/";
            }
            if ($.getUrlParam("ReturlUrl") == "") {
                window.location.href = "/Admin/Main";
            }
            if($.getUrlParam("token")=="")
                ZENG.msgbox.show("正在跳转至SSO...", 6);
            else
                ZENG.msgbox.show("正在验证用户...", 6);
        });
    </script>
</head>
<body>
    @if (!string.IsNullOrEmpty(ViewBag.SSOUrl))
    {
        <script type="text/javascript">
            window.top.location.href = '@(new HtmlString(ViewBag.SSOUrl))';
        </script>
    }
</body>
</html>
