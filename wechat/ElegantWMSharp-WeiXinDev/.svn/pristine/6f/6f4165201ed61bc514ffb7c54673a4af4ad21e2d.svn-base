body {
    /*background:#2c3e50;*/
    background: #c4ddf2 url(/Areas/HR/Resources/images/ehrlogin.jpg) top center no-repeat;
    background-size: 105%;
    font-family: 'Microsoft YaHei',Arial;
    margin: 10px;
    background-attachment: scroll;
}
.bg {
    background: url(/Areas/HR/Resources/images/ehrlogin1.png) center top  no-repeat  ;
    position:fixed;
    background-size: 400px 550px;
    margin-top:-25px;
    margin-left:-10px;
    width:400px;
    height:550px;
    text-align:center;
}

.noticList {
    border: 1px solid #e5e5e5;
    background-color: #fff;
    /*box-shadow: 1px 1px 2px #e5e5e5,-1px -1px 2px #e5e5e5;*/
    padding: 10px 10px 14px 10px;
    margin-bottom: 12px;
    border-radius: 3px;
}

    .noticList:hover {
        background-color: #fafafa;
    }

.noticListSld {
    background-color: #efefef;
}

.noticList h3 {
    font-size: 16px;
    margin: 6px 0px 16px 0px;
    font-weight: bold;
}

