.noticDetail h3 {
    font-size: 16px;
    margin: 0px 0px 12px 0px;
    font-weight: bold;
}

.noticDetail h4 {
    font-size: 16px;
    margin: 20px 0px 8px 0px;
    font-weight: normal;
    color: #444;
    border-bottom: 1px solid #ddd;
    padding: 8px 0px 8px 0px;
}

    .noticDetail h4 span {
        padding: 7px 0px 7px 0px;
        border-bottom: 2px solid #CC3333;
    }

.lesson {
    border-bottom: 1px dashed #ddd;
    margin: 8px 0px 8px 0px;
    padding: 8px 0px 8px 0px;
    font-size: 12px;
}

.noticDetail h6 {
    font-size: 16px;
    color: #FF6666;
    text-align: center;
    padding: 16px 4px;
    margin: 8px 0px;
}



.ht {
    padding: 5px;
    margin: 10px 0px 0px 0px;
    font-size: 14px;
}

.mainArea {
    line-height: 180%;
}

    .mainArea h4 {
        font-size: 14px;
        margin: 0px 0px 8px 0px;
        font-weight: normal;
        color: #444;
        border-bottom: 1px solid #ddd;
        padding: 8px 0px 8px 0px;
    }

        .mainArea h4 span {
            padding: 4px 0px 7px 0px;
            border-bottom: 2px solid #CC3333;
        }

.navs {
    height: 42px;
    font-size: 0px;
    position: fixed;
    width: 100%;
    z-index: 999;
    top: 0;
    left: 0;
}

    .navs div {
        height: 42px;
        width: 33.33333333333%;
        /*background: url(/Areas/NPaia/Resources/images/Goods/nav.png) 0 0 repeat-x;*/
        background-color: #2c3e50;
        float: left;
    }

    .navs img {
        height: 20px;
        margin: 11px 0;
    }

.navsBo {
    height: 42px;
    font-size: 0px;
    position: fixed;
    bottom: 3px;
    width: 100%;
    z-index: 999;
}

    .navsBo div {
        height: 45px;
        width: 50%;
        /*background: url(/Areas/NPaia/Resources/images/Goods/nav.png) 0 0 repeat-x;*/
        background-color: #2c3e50;
        float: left;
    }

    .navsBo img {
        height: 20px;
        margin: 11px 0;
    }


.bg,
ul li img {
    width: 100%;
}

#title {
    height: 20%;
    background: url(/Areas/NPaia/Resources/images/Goods/bgcolor.png) center center repeat-x;
    color: #fff;
}

#per {
    height: 100px;
    background: url(/Areas/NPaia/Resources/images/Goods/per.png) center center repeat-x;
    color: #fff;
    text-align: left;
    font-size: 16px;
    padding: 20px;
}

.split {
    height: 10px;
    background: url(/Areas/Matrix/Resources/images/line.jpg) center center repeat-x;
}

table {
    width: 100%;
}

td {
    padding: 10px;
    border: 1px solid #fff;
}

#name .btn,
#sel .btn,
#info .btn {
    border-color: #ccc;
    background-color: #fff;
    background-image: -webkit-linear-gradient(top,#fff 0,#fff 100%);
    background-image: linear-gradient(to bottom,#fff 0,#fff 100%);
    color: #000;
    text-shadow: 0;
    text-shadow: 0 0 0 rgba(0,0,0,0);
    width: 54px;
}

    #name .btn.active,
    #sel .btn.active,
    #info .btn.active {
        background-color: #2d6ca2;
        border-color: #2b669a;
        background-image: -webkit-linear-gradient(top,#428bca 0,#2d6ca2 100%);
        background-image: linear-gradient(to bottom,#428bca 0,#2d6ca2 100%);
        color: #fff;
        text-shadow: 0;
        text-shadow: 0 0 0 rgba(0,0,0,0);
        width: 54px;
    }


table td {
    border-width: 0px;
}

#skulist {
    text-align: left;
}

    #skulist .name {
        margin: 5px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    #skulist td {
        width: 50%;
    }

table#detail,
table#bigImg {
    width: 80%;
    text-align: left;
    margin: 0 10%;
}

    table#detail td,
    table#bigImg td {
        border-width: 0 0 1px 0;
    }

        table#bigImg td img {
            width: 100%;
        }

table.cart {
    border: 1px solid #ccc;
    text-align: left;
    background-color: #fff;
}

    table.cart td.smallImg {
        width: 100px;
        padding: 3px;
    }

    table.cart td.check {
        width: 50px;
        text-align: center;
    }

    table.cart td.count {
        border-width: 1px 0 0 0;
        border-color: #ccc;
    }

.tab-pane {
    padding: 10px 10px 0;
}

ul li {
    list-style-type: none;
}
