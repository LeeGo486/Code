<table class="AvTable">
    <thead>
        <tr>
            <th style="width: 25%">补签日期</th>
            <th style="width: 20%">审批状态</th>
            <th>原因</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow dr in ViewBag.AttendanceGetApply.Rows)
        {
            <tr>
                <th>@dr["c_renewtimecardtime"]</th>
                <th>@dr["c_status"]</th>
                <td>@dr["c_uncardrecordreason"]</td>
            </tr>
        }
    </tbody>
</table>
