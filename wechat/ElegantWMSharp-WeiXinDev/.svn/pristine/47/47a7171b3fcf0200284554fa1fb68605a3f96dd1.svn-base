@{
    ViewBag.Title = "陈列";
    Layout = "~/Views/Shared/_WeiXinLayout.cshtml";
}
@section script{
    <script src="~/Scripts/IosSlider/jquery.iosslider.min.js"></script>
    <link href="~/Areas/S3/Resources/Mobile.css" rel="stylesheet" />
    <script type="text/javascript">
        //定位位置
        function scrollTo(elem) {
            $('html, body').animate({ scrollTop: $(elem).offset().top }, 300, false);
        }
        //显示详细和报修
        function ShowExhibit(type, theme, event, cc) {

            if (type == 0) {
                Msg.show("请稍后...", 3);
                $.post("/S3/Exhibit/Detail", function (htmldata) {
                    Msg.hide();
                    $("#editArea").html(htmldata);
                    $("#btnAction").show();
                    $("#cl_theme")[0].innerHTML = "<i class='icon-comments-alt'></i>&nbsp;&nbsp;[" + theme + "] " + event;
                    $("#dn_cl").hide();
                    if (cc == 0) {//橱窗
                        $("#item2 img").attr("src","/Areas/S3/Resources/images/Exhibit/2.jpg");
                        $("#item3 img").attr("src", "/Areas/S3/Resources/images/Exhibit/4.jpg");
                    }
                    else {//店内
                        $("#item2 img").attr("src", "/Areas/S3/Resources/images/Exhibit/5.jpg");
                        $("#item3 img").attr("src", "/Areas/S3/Resources/images/Exhibit/6.jpg");
                    }
                    scrollTo($("#editArea"));
                });
            } else if (type == 1) {
                Msg.show("请稍后...", 3);
                $.post("/S3/Exhibit/Detail", function (htmldata) {
                    Msg.hide();
                    $("#editArea").html(htmldata);
                    $("#btnAction").hide();
                    $("#dn_cl").hide();
                    $("#cl_theme")[0].innerHTML = "<i class='icon-comments-alt'></i>&nbsp;&nbsp;[" + theme + "] " + event;
                    if (cc == 0) {//橱窗
                        $("#item2 img").attr("src", "/Areas/S3/Resources/images/Exhibit/2.jpg");
                        $("#item3 img").attr("src", "/Areas/S3/Resources/images/Exhibit/4.jpg");
                    }
                    else {//店内
                        $("#item2 img").attr("src", "/Areas/S3/Resources/images/Exhibit/5.jpg");
                        $("#item3 img").attr("src", "/Areas/S3/Resources/images/Exhibit/6.jpg");
                    }
                    scrollTo($("#editArea"));
                });
            } else if (type == 2) {
                Msg.show("请稍后...", 3);
                $.post("/S3/Exhibit/Detail", function (htmldata) {
                    Msg.hide();
                    $("#editArea").html(htmldata);
                    $("#btnAction").hide();
                    $("#dn_cl").show();
                    $("#cl_theme")[0].innerHTML = "<i class='icon-comments-alt'></i>&nbsp;&nbsp;[" + theme + "] " + event;
                    if (cc == 0) {//橱窗
                        $("#item2 img").attr("src", "/Areas/S3/Resources/images/Exhibit/2.jpg");
                        $("#item3 img").attr("src", "/Areas/S3/Resources/images/Exhibit/4.jpg");
                    }
                    else {//店内
                        $("#item2 img").attr("src", "/Areas/S3/Resources/images/Exhibit/5.jpg");
                        $("#item3 img").attr("src", "/Areas/S3/Resources/images/Exhibit/6.jpg");
                    }
                    scrollTo($("#editArea"));
                });
            } else if (type == 3) {
                Msg.show("请稍后...", 3);
                $.post("/S3/Exhibit/MyExhibit", function (htmldata) {
                    Msg.hide();
                    $("#editArea").html(htmldata);
                    $("#wdcl_theme")[0].innerHTML = "<i class='icon-comments-alt'></i>&nbsp;&nbsp;[" + theme + "] " + event;
                    if (theme == "我的橱窗陈列") {
                        $("#dn_cl").hide();
                        $("#wdcl_img")[0].src = "/Areas/S3/Resources/images/Exhibit/2.jpg";
                    }
                    else {
                        $("#dn_cl").show();
                        $("#wdcl_img")[0].src = "/Areas/S3/Resources/images/Exhibit/5.jpg";
                    }

                    scrollTo($("#editArea"));
                });
            }
        }
        function EditMyExhibit() {
            Msg.show("请稍后...", 3);
            $.post("/S3/Exhibit/EditMyExhibit", function (htmldata) {
                Msg.hide();
                $("#editArea").html(htmldata);
                scrollTo($("#editArea"));
            });
        }
        $(function () {
            $("li").click(function () {
                $("li").removeClass("dataListSld");
                $(this).addClass("dataListSld");
            });
        });
    </script>
    <style type="text/css">
        p {
            padding-left: 18px;
        }
    </style>
}
<div class="ht">
    <i class="icon-picture"></i>&nbsp;&nbsp;橱窗陈列
    <span onclick="Msg.show('分享到社区',0);">
        <i class="icon-random icon-large"></i>
    </span>
