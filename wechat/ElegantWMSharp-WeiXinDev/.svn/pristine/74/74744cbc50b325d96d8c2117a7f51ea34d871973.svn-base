<script type="text/javascript">
    //加载增加培训履历
    function loadAddTrain() {
        Msg.show("增加培训履历加载中...", 3);
        $.get("/S3/HR/AddTrain", function (htmldata) {
            Msg.hide();
            showAddTrain(htmldata);
        });
    }

    //显示增加培训履历
    function showAddTrain(data) {
        $("#saddtrainarea").html(data);
        scrollTo("#saddtrainarea");
    }

    //提交增加培训履历
    function submitTrain(data) {
        Msg.show("提交成功", 0);
    }
</script>
