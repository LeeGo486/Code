@{
    ViewBag.Title = "首页";
    //Layout = "~/Views/Shared/_BaseLayout.cshtml";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}
@section script{
    <script type="text/javascript" src="~/Scripts/fullPage/jquery.fullPage.js"></script>
    <link rel="stylesheet" href="~/Areas/Game/Resources/css/JOREALLanternFestival.css?v3" />
    <script type="text/javascript">
        $(function () {
            $("#Bg img").load(function () {
                var bgHeight = $("#Bg").height();
                $("#btn").css("bottom", bgHeight * 0.2);
                $("#fishindex").css("bottom", bgHeight * 0.2);
                $("#note").css("bottom", bgHeight * 0.15);
                $("#logo").css("bottom", bgHeight * 0.01);
            });
            $("#fish0").fadeIn("slow")
            $("#Bg").fullpage({})

            $("#btn").click(function () {
                window.location.href = "/Game/JOREALLanternFestival/BeginGame?sid=" + Url.get("sid") + "&oid=" + Url.get("oid");
            });
        })
    </script>
}
<div id="Bg">
    <img src="/Areas/Game/Resources/images/JOREALLanternFestival/bg1.jpg" alt="head" width='100%' />
</div>
<div id="btn">
    <img src="/Areas/Game/Resources/images/JOREALLanternFestival/bt.png" alt="head" style="width: 50%" />
</div>
<div id="note">
    <img src="/Areas/Game/Resources/images/JOREALLanternFestival/note.png" alt="head" style="width: 70%;" />
</div>

<div id="fishindex"style="width: 30%;right:16.5%;">
    <img id="fish0" src="/Areas/Game/Resources/images/JOREALLanternFestival/1001.png" alt="head" style="width: 100%;display:none;" />
</div>

<div id="logo">
    <img src="/Areas/Game/Resources/images/JOREALLanternFestival/EP.png" alt="head" style="width: 100%" />
</div>


