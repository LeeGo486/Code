a {
    color: #5e6060;
}

.ht {
    padding: 5px;
    margin: 10px 0px 0px 0px;
    font-size: 14px;
}

h4 {
    font-size: 14px;
    margin: 0px 0px 8px 0px;
    font-weight: normal;
    color: #444;
    border-bottom: 1px solid red;
    padding: 8px 0px 8px 0px;
}

.h4 span {
    padding: 4px 0px 7px 0px;
    border-bottom: 2px solid #CC3333;
}


.marker {
    color: #969696;
    margin-right: 10px;
}

.courseList {
    border: 1px solid #e5e5e5;
    background-color: #fff;
    /*box-shadow: 1px 1px 2px #e5e5e5,-1px -1px 2px #e5e5e5;*/
    padding: 10px 10px 14px 10px;
    margin-bottom: 12px;
    border-radius: 3px;
}

    .courseList:hover {
        background-color: #fafafa;
    }

.courseListSld {
    background-color: #efefef;
}

.courseList h3 {
    font-size: 16px;
    margin: 6px 0px 16px 0px;
    font-weight: bold;
}

.courseDetail {
    color: #5e6060;
    padding: 10px;
    border: 1px solid #e5e5e5;
    background-color: #fff;
    /*box-shadow: 1px 1px 2px #e3e3e5,-1px -1px 2px #e3e3e5;*/
    font-size: small;
    border-radius: 3px;
}

    .courseDetail h3 {
        font-size: 16px;
        margin: 0px 0px 12px 0px;
        font-weight: bold;
    }

    .courseDetail h4 {
        font-size: 16px;
        margin: 20px 0px 8px 0px;
        font-weight: normal;
        color: #444;
        border-bottom: 1px solid #ddd;
        padding: 8px 0px 8px 0px;
    }

        .courseDetail h4 span {
            padding: 7px 0px 7px 0px;
            border-bottom: 2px solid #CC3333;
        }

.lesson {
    border-bottom: 1px dashed #ddd;
    margin: 8px 0px 8px 0px;
    padding: 8px 0px 8px 0px;
    font-size: 12px;
}

    .lesson .operate {
        /*border-top: 1px dashed #ccc;*/
        margin-top: 8px;
        font-size: 14px;
        text-align: right;
    }


.courseDetail h6 {
    font-size: 16px;
    color: #FF6666;
    text-align: center;
    padding: 16px 4px;
    margin: 8px 0px;
}

.bm {
    background-color: #66CC33;
}

.kkz {
    background-color: #FF6666;
}

.cd {
    background-color: #FF9966;
}

.badge {
    font-weight: normal;
}


.survey {
    color: #666;
    padding: 10px;
    border: 1px solid #e5e5e5;
    background-color: #fff;
    /*box-shadow: 1px 1px 2px #e3e3e5,-1px -1px 2px #e3e3e5;*/
    font-size: small;
    border-radius: 3px;
}

    .survey h3 {
        text-align: center;
        font-size: 16px;
        margin: 0px 0px 15px 0px;
    }

    .survey h4 {
        font-size: 14px;
        margin: 20px 0px 8px 0px;
        font-weight: bold;
        color: #5e6060;
        border-bottom: 1px solid #ddd;
        padding: 8px 0px 8px 0px;
    }

        .survey h4 span {
            padding: 7px 0px 7px 0px;
            border-bottom: 2px solid #CC3333;
        }

    .survey label {
        vertical-align: middle;
        margin-right: 10px;
        font-weight: normal;
    }

/*********用户个人信息页面************/
.headimg {
    width: 50px;
    text-align: center;
}

    .headimg img {
        border-radius: 4px;
        border: 1px solid #ddd;
        width: 48px;
        float: left;
    }

.userinfo {
    float: left;
    min-width: 50px;
    margin-left: 10px;
    padding-top: 15px;
}

    .userinfo span {
        font-size: 14px;
        font-weight: bold;
    }

.infoArea {
    color: #5e6060;
    padding: 10px;
    border: 1px solid #e5e5e5;
    background-color: #fff;
    font-size: 14px;
    border-radius: 3px;
}

    .infoArea .glyphicon {
        margin-right: 10px;
    }

.courseHis {
    color: #5e6060;
    padding: 10px 10px 0px 10px;
    border: 1px solid #e5e5e5;
    background-color: #fff;
    /*box-shadow: 1px 1px 2px #e3e3e5,-1px -1px 2px #e3e3e5;*/
    font-size: small;
    border-radius: 3px;
    margin-bottom: 20px;
}

    .courseHis h3 {
        font-size: 16px;
        margin: 0px 0px 12px 0px;
        font-weight: bold;
    }

    .courseHis .operate {
        border-top: 1px dashed #ccc;
        margin-top: 8px;
        font-size: 14px;
        text-align: center;
    }

    .courseHis .btnOpt {
        margin: 8px 0px;
        padding: 0px 16px;
        float: right;
        color: #777;
    }

.list-group {
    border-radius: 3px;
    -webkit-box-shadow: 0 0px 0px rgba(0,0,0,0);
    box-shadow: 0 0px 0px rgba(0,0,0,0);
}

.modal-content {
    font-size: 14px;
    text-align: left;
}

.modal-footer {
    padding: 8px;
}

/*************积分明细****************/
.detailTable {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #E3E3E3;
    margin-bottom: 8px;
}

    .detailTable th {
        text-align: left;
        font-weight: normal;
        padding: 6px 3px 6px 3px;
        background-color: #f7f7f7;
        border: 1px solid #efefef;
        width: 90px;
        font-size: 14px;
    }

    .detailTable td {
        text-align: left;
        font-weight: normal;
        padding: 6px 0px 6px 3px;
        background-color: #fff;
        border: 1px solid #efefef;
    }

.ht {
    padding: 5px;
    margin: 10px 0px 0px 0px;
    font-size: 14px;
}

    .ht span {
        float: right;
        margin-left: 5px;
        padding: 0px 10px;
    }

/*************分数表格****************/
.resultsTable {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #E3E3E3;
}

    .resultsTable th {
        text-align: center;
        font-weight: normal;
        padding: 6px 3px 6px 0px;
        background-color: #f7f7f7;
        border: 1px solid #efefef;
        width: 90px;
    }

    .resultsTable td {
        text-align: center;
        font-weight: normal;
        padding: 6px 0px 6px 3px;
        background-color: #fff;
        border: 1px solid #efefef;
    }
