@{
    ViewBag.Title = "用户领奖界面";
    Layout = "~/Views/Shared/_WeiXinLayout.cshtml";
}
@section script{
    <script type="text/javascript">
        $(function () {
            $("#Bg img").load(function () {
                var bgHeight = $("#Bg").height();
                $("#btn").css("top", bgHeight * 0.9);
            });

            $("#btnSubmit").click(function () {
                window.location.href = "/Game/PachiraMacrocarpa/psInfo?sid=" + Url.get("sid") + "&oid=" + Url.get("oid");
            });
        })

    </script>
    <style type="text/css">
        #Bg img {
            width: 100%;
        }

        #btn {
            position: absolute;
            left: 36%;
            z-index: 1;
        }
    </style>
}

