<table class="AvTable">
    <thead>
        <tr>
            <th style="width: 12%">考勤项目</th>
            <th style="width: 25%">开始时间</th>
            <th style="width: 25%">结束时间</th>
            <th style="width: 12%">状态</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow dr in ViewBag.VacationGet.Rows)
        {
            <tr>
                <th>@dr["c_name"]</th>
                <th>@dr["c_begintime"]</th>
                <th>@dr["c_endtime"]</th>
                <td>@dr["c_applystatus"]</td>
            </tr>
        }
    </tbody>
</table>
