<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>登录页面</title>
    <meta charset="UTF-8">
   <script src="../../jquery-easyui-1.3.4/jquery.min.js" type="text/javascript"></script>
    <script src="../../jquery-easyui-1.3.4/jquery.cookie.js" type="text/javascript"></script>
    <link id="easyuiTheme" href="../../jquery-easyui-1.3.4/themes/default/easyui.css"
        rel="stylesheet" type="text/css" />
    <script src="../../jquery-easyui-1.3.4/changeEasyuiTheme.js" type="text/javascript"></script>
    <link href="../../jquery-easyui-1.3.4/themes/icon.css" rel="stylesheet" type="text/css" />
    <script src="../../jquery-easyui-1.3.4/jquery.easyui.min.js" type="text/javascript"></script>
    <script src="../../jquery-easyui-1.3.4/jquery.toolbar.js" type="text/javascript"></script>

    <script src="../../jquery-easyui-1.3.4/JS_PrintArea.js" type="text/javascript"></script>
    <script src="../../jquery-easyui-1.3.4/js_hzycfg.js?Date=20131203" type="text/javascript"></script>
    <script src="../../jquery-easyui-1.3.4/js_hzyCommon.js?Date=20131203" type="text/javascript"></script>
    <script src="../../JS/base/login.js?Date=20131202" type="text/javascript"></script>
    <style>
        /*input {
            width: 250px;
            font-size: 22pt;
            border: none;
            color: #000;
        }*/

    </style>
</head>
<body class="easyui-layout" style="background-color: black;" id="mybody" fit="true">
    <noscript>
        <div style="position: absolute; z-index: 100000; height: 2046px; top: 0px; left: 0px; width: 100%; background: white; text-align: center;">
            <img src="images/noscript.gif" alt='抱歉，请开启脚本支持！' />
        </div>
    </noscript>
    <div style="width: 1470px; height: 600px; background: url('../../image/VEX_BG.jpg') no-repeat">
        <div id="login" style="width: 400px; height: 250px; position: absolute; top: 196px; left: 118px;">
            <div>
                <form id="form_Login" method="post">
                    <table onkeydown="if(event.keyCode==13){doLogin();}" id="loginTable" style="margin: auto;"
                        cellpadding="12px">
                        <tr>
                            <td>
                                <input type="text" id="UserName" name="UserName"  style="background: url('../../image/username.png') no-repeat"
                                    maxlength="20" onkeyup="SetTextBoxStyle(this)" />

                                <input class="easyui-textbox" style="width:100%;height:20px;padding:12px" data-options="prompt:'Username',iconCls:'icon-save',iconWidth:38">
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="Password" id="Password" name="Password" style="background: url('../../image/password.png') no-repeat"
                                    maxlength="20" onkeyup="SetTextBoxStyle(this)" />

                            </td>
                        </tr>
                    </table>
                </form>
                <div style="color: red; font: 12px; padding: 2px;">
                    &nbsp;
                </div>
                <div style="position:absolute;left:20px;width:310px;height:68px;"  onclick="doLogin();">
                </div>

                 <div id="login_msg" style="text-align:center; color: red; font: 12px; padding: 2px;position:absolute;left:20px;width:310px;top:139px;">
                    &nbsp;
                </div>
            </div>
        </div>
</body>
</html>
