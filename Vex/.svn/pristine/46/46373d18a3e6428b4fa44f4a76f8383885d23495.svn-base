function initSearch(){
	$("#search").textbox({
		width:200,
		prompt:'请输入维修单号',
		type:'text',
		buttonIcon:'icon-search',
		buttonText:'搜索',
		onClickButton:function(){ serach()}
	})
	.bind('keydown', function(e){// when press ENTER key, accept the inputed value.
		if (e.keyCode == 13){ 
			serach(); 
		};
	});
}

