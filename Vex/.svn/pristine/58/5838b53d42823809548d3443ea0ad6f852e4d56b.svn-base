// JavaScript Document

function openmenu(o){
	if($(o).next().css('display')=='none')$(o).addClass('open');
	else $(o).removeClass('open');
	$(o).next().slideToggle('slow');	
}

$(document).ready(function(){
	$('.Help_slidehelp .title').on('click' , function(){
		if($(this).next().css('display')=='none')$(this).addClass('open');
		else $(this).removeClass('open');
		$(this).next().slideToggle('fast');
	});  
});