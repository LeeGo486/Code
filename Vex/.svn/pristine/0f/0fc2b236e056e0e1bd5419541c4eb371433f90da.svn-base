        if (res) {
            if (res.result.toUpperCase() == 'TRUE') { 
                $('#upPhotodlg').dialog('close');
                alert('上传照片成功！');
                $('#img_photo').attr("src", m_imgurl + res.message + ".jpg");
                $('#c_photo').val(res.message);
            } else if (res.result.toUpperCase() == 'FALSE') {
               alert(res.message);
            }  
        } else {
            alert('上传照片失败！');
        }
    }
}
 

