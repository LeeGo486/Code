 *  验证身份证号码
 *  DLY 
 */
function checkIdCard(id) {
    $('#c_birthday').val('');
    $('#c_age').val(''); 
    if (id != '' && idcard_check(id)) {
        var birthday = idcard_getBirthDay(id, '-');
        if (birthday != '') {
            var curyear = (new Date()).getFullYear(); 
            var age = 1 * curyear - birthday.substring(0, 4)+1;
            $('#c_birthday').val(birthday);
            $('#c_age').val(age);
        }
    } 
}


