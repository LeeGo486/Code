<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-autowire="byName" default-lazy-init="true">

	<!-- 使Spring关注Annotation -->
	<context:annotation-config />
	
	<!-- 让Spring通过自动扫描来查询和管理Bean -->
	<context:component-scan base-package="org.hy" />



	<bean id="propertyConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:proxooldb.properties</value>
			</list>
		</property>
	</bean>




<!-- 151数据源 -->
	<bean id="dataSourceX6" class="org.logicalcobwebs.proxool.ProxoolDataSource">
		<property name="alias" value="X6DB" />
		<property name="driver">
			<value>com.microsoft.sqlserver.jdbc.SQLServerDriver</value>
		</property>
		<property name="driverUrl">
			<value>${jdbc-0.proxool.driver-url}</value>
		</property>
		<property name="user" value="${jdbc-0.user}" />
		<property name="password" value="${jdbc-0.password}"></property>
		<property name="prototypeCount">
			<value>5</value>
		</property>
		<property name="maximumConnectionCount" value="${jdbc-0.proxool.maximum-connection-count}" />
		<property name="minimumConnectionCount" value="${jdbc-0.proxool.minimum-connection-count}" />
		<!-- <property name="houseKeepingTestSql" value="${jdbc-0.proxool.house-keeping-test-sql}" /> -->
		<property name="trace">
			<value>true</value>
		</property>
		<property name="verbose">
			<value>true</value>
		</property>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSourceX6"></property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.SQLServerDialect
				</prop>
				<prop key="hibernate.connection.release_mode">auto</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hbm2ddl.auto">create</prop>
			</props>
		</property>

		<!-- 主键Bean类 -->
		<property name="annotatedClasses">
			<list>
				<value>org.hy.model.MaintainRegister</value>
			</list>
		</property>
	</bean>
	
	
	
	
<!-- DRP数据源 -->
	
	<bean id="dataSourceDRP" class="org.logicalcobwebs.proxool.ProxoolDataSource">
		<property name="alias" value="DRPDB" />
		<property name="driver">
			<value>${jdbc-2.proxool.driver-class}</value>
		</property>
		<property name="driverUrl">
			<value>${jdbc-2.proxool.driver-url}</value>
		</property>
		<property name="user" value="${jdbc-2.user}" />
		<property name="password" value="${jdbc-2.password}"></property>
		<property name="prototypeCount">
			<value>5</value>
		</property>
		<property name="maximumConnectionCount" value="${jdbc-2.proxool.maximum-connection-count}" />
		<property name="minimumConnectionCount" value="${jdbc-2.proxool.minimum-connection-count}" />

		<property name="trace">
			<value>true</value>
		</property>
		<property name="verbose">
			<value>true</value>
		</property>
	</bean>
	<bean id="sessionFactoryDRP"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSourceDRP"></property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.SQLServerDialect
				</prop>
				<prop key="hibernate.connection.release_mode">auto</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hbm2ddl.auto">create</prop>
			</props>
		</property>

		<property name="annotatedClasses">
			<list>
				<value>org.hy.model.Jdepot</value>
			</list>
		</property>
	</bean>
 	
<!--  	
 	<bean id="sessionFactory" class="org.hzy.spring.MutiSessionFactory">
 	<property name="sessionFactory" ref="sessionFactoryDRP"></property>
 	</bean> -->
    <bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory">
			<ref local="sessionFactoryDRP" />
		</property>
	</bean>

     <tx:annotation-driven transaction-manager="txManager"/>

	 <tx:advice id="txAdvice" transaction-manager="transactionManager">
		<tx:attributes>
			<tx:method name="add*" propagation="REQUIRED" />
			<tx:method name="delete*" propagation="REQUIRED" />
			<tx:method name="update*" propagation="REQUIRED" />
			<tx:method name="*" read-only="true" />
		</tx:attributes>
	</tx:advice>
 
	<aop:config>
		<aop:pointcut id="allManagerMethod" expression="execution(* org.hy.service.*.*(..))" />
		<aop:advisor advice-ref="txAdvice" pointcut-ref="allManagerMethod" />
	</aop:config>





	<bean id="RestEasyDemoService" class="org.hy.resteasyservice.RestEasyDemoService">
	</bean>

</beans>