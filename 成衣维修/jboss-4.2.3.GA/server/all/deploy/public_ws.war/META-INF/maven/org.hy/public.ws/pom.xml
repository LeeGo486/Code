	<build>
	
		<finalName>${webapp.name}</finalName>
		
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/assembly</directory>
			</resource>
		</resources>
		<!-- source paths for testing -->
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
			</testResource>
			<testResource>
				<directory>src/test/assembly</directory>
			</testResource>
		</testResources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webResources>
						<resource>
							<directory>src/main/webapp${webapp.postfix}</directory>
						</resource>
						<!--
							sometimes, define assembly configurations under the web-inf in
							assembly dir
						-->
						<resource>
							<directory>src/main/assembly</directory>
							<includes>
								<include>**/WEB-INF/**</include>
							</includes>
						</resource>
					</webResources>
					<webXml>src/main/webapp${webapp.postfix}/WEB-INF/web.xml</webXml>
					<warName>${webapp.name}</warName>
				</configuration>
			</plugin>
		</plugins>

	</build>

