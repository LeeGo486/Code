@model UserAddModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_AjaxLayout.cshtml";
}

<form class="form-horizontal" method="post" action="/User/Add">
    <div class="control-group">
        <label class="control-label" for="inputEmail">@Html.LabelFor(m => m.UserName)</label>
        <div class="controls">
            @Html.TextBoxFor(m => m.UserName)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputPassword">@Html.LabelFor(m => m.RealName)</label>
        <div class="controls">
            @Html.TextBoxFor(m => m.RealName)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputPassword">@Html.LabelFor(m => m.Department)</label>
        <div class="controls bindTdCloseIcon">
            @Html.TextBoxFor(m => m.Department)
        </div>
    </div>
</form>
