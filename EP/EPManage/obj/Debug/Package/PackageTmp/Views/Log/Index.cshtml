@model PageList<EPManageWeb.Entities.Models.OperationLog>

@{
    ViewBag.Title = "日志查看";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section head{
    <link href="@Styles.Url("~/Content/log.css")" rel="stylesheet"/>
    <link href="@Styles.Url("~/Content/pager.css")" rel="stylesheet"/>
}
<div class="alert alert-success">
    在本页面，您可查看所有用户操作过的日志
</div>
<table class="table table-striped table-bordered table-hover table-condensed">
    <tbody>
        <tr>
            <th>样板编号</th>
            <th>大货编号</th>
            <th>日期</th>
            <th>操作</th>
            <th>用户</th>
        </tr>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Clothes.SampleNO</td>
                <td>@t.Clothes.ProductNO</td>
                <td class="dateTd">@t.CreateDT</td>
                <td>@t.OperationTypeToString()</td>
                <td>@t.User.RealName</td>
            </tr>
        }
    </tbody>
</table>
<div class="pager">
    @Html.Raw(Html.Pager("page", Model.PageIndex, Model.PageSize, Model.TotalCount))
</div>
